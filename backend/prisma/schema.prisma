generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  role     String @default("user")

  ticketsCreated  Ticket[] @relation("TicketsCreated")
  ticketsAssigned Ticket[] @relation("TicketsAssigned")

  approvals TicketApproval[]
  steps     ApprovalFlowStep[]
  comments  Comment[]
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  priority    String
  status      String   @default("open")
  sla         String?
  dueAt       DateTime?
  slaBreached Boolean  @default(false)

  createdAt DateTime @default(now())

  createdById  Int
  assignedToId Int?
  categoryId   Int?

  createdBy  User  @relation("TicketsCreated", fields: [createdById], references: [id])
  assignedTo User? @relation("TicketsAssigned", fields: [assignedToId], references: [id])
  category   Category? @relation(fields: [categoryId], references: [id])

  approvals    TicketApproval[]
  comments     Comment[]
  attachments  Attachment[]
  activities TicketActivity[]

}

model Category {
  id         Int      @id @default(autoincrement())
  name       String
  parentId   Int?
  defaultSla String?

  parent        Category?   @relation("CategoryParent", fields: [parentId], references: [id])
  subcategories Category[]  @relation("CategoryParent")

  tickets       Ticket[]
  approvalFlows ApprovalFlow[]
}

model ApprovalFlow {
  id         Int    @id @default(autoincrement())
  name       String
  categoryId Int

  category Category @relation(fields: [categoryId], references: [id])
  steps    ApprovalFlowStep[]
}

model ApprovalFlowStep {
  id         Int @id @default(autoincrement())
  flowId     Int
  approverId Int
  stepOrder  Int

  flow     ApprovalFlow @relation(fields: [flowId], references: [id])
  approver User         @relation(fields: [approverId], references: [id])

  TicketApprovals TicketApproval[]
}

model TicketApproval {
  id         Int      @id @default(autoincrement())
  ticketId   Int
  stepId     Int?
  approverId Int?
  status     String   @default("pending")
  comment    String?
  approvedAt DateTime?

  ticket   Ticket           @relation(fields: [ticketId], references: [id])
  step     ApprovalFlowStep? @relation(fields: [stepId], references: [id])
  approver User?            @relation(fields: [approverId], references: [id])
}

model Comment {
  id        Int      @id @default(autoincrement())
  ticketId  Int
  authorId  Int
  message   String
  isInternal Boolean @default(false)
  createdAt DateTime @default(now())

  ticket   Ticket   @relation(fields: [ticketId], references: [id])
  author   User     @relation(fields: [authorId], references: [id])
}

model Attachment {
  id        Int      @id @default(autoincrement())
  ticketId  Int
  fileName  String
  filePath  String
  mimeType  String?
  size      Int?
  uploadedAt DateTime @default(now())

  ticket Ticket @relation(fields: [ticketId], references: [id])
}

model TicketActivity {
  id        Int      @id @default(autoincrement())
  ticketId  Int
  userId    Int?
  type      String   // "status_change", "comment", "assign", etc.
  message   String
  createdAt DateTime @default(now())

  ticket Ticket @relation(fields: [ticketId], references: [id])
}

